
<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/project/{{project.id}}">{{project.title}}</a>
    </h2>
    <p> {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
      <p>
        Content :
        {{project.content}}
      </p>
    </div>
    {{#if project.comment.length}}
      <div>
        <p>
          Comment :
          {{project.comment}}
        </p>
      </div>

    {{/if}}
  </div>
{{/each}}