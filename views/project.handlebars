<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>

  <form class="form update-form" onsubmit="return false">
    <div class="form-group display-flex flex-column align-start">
      <label for="project-title">Title</label>
      <input class="form-input" type="text" name="title" id="project-title" value="{{title}}" />
    </div>
    <div class="form-group display-flex flex-column align-start">
      <label for="project-content">Content</label>
      <input class="form-input" type="text" name="content" id="project-content" value="{{content}}" />
    </div>
    <div class="comment-box form-group display-flex flex-column align-start">
      <label for="project-comment">Comment</label>
      <input class="form-input" type="text" name="comment" id="project-comment" value="{{comment}}" />
    </div>
    <div class="form-group display-flex flex-row justify-space-between">
      <div>
        <button value="comment" class="btn btn-md btn-primary" id="add-comment" data-id="{{id}}"
          onclick="addCommentField(event)">
          Add Comment
        </button>
        <button type="submit" value="update" class="btn btn-md btn-info mb-2" id="update-project" data-id="{{id}}"
          onclick="updateButtonHandler(event)">Update</button>
      </div>
      <button type="submit" value="delete" class="btn btn-md btn-danger mt-2" id="delete-project" data-id="{{id}}"
        onclick="delButtonHandler(event)" ;>Delete</button>
    </div>
</div>
</form>
</div>

<script src="/js/profile.js"></script>